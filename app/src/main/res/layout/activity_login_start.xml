<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.a6studios.aid4college.LoginStart"
    android:background="@color/colorPrimary">
    <LinearLayout
        android:id="@+id/login_start_3p"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/login_start_email"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_margin="20dp">

        <ImageView
            android:id="@+id/login_start_gmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:clickable="true"
            android:src="@mipmap/ic_google" />

        <ImageView
            android:id="@+id/login_start_facebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:clickable="true"
            android:src="@mipmap/ic_facebook" />

        <ImageView
            android:id="@+id/login_start_twitter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:clickable="true"
            android:src="@mipmap/ic_twitter" />
    </LinearLayout>

    <TextView
        android:id="@+id/social"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/login_start_SignUp"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:onClick="ClickListner"
        android:text="Click here to login via Social Apps."
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/login_start_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/login_start_SignIn"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:clickable="true"
        android:onClick="ClickListner"
        android:text="Click Here to login via EMail ID"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp" />

    <Button
        android:id="@+id/login_start_SignIn"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="223dp"
        android:layout_toEndOf="@+id/textView2"
        android:onClick="ClickListner"
        android:text="@string/sign_in"
        android:visibility="invisible" />

    <Button
        android:id="@+id/login_start_SignUp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/login_start_SignIn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="59dp"
        android:onClick="ClickListner"
        android:text="@string/sign_up"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button.Colored"
        android:visibility="invisible"
        android:layout_alignLeft="@id/login_start_SignIn"/>

</RelativeLayout>
